FROM node:22.4

# Create a non-root user
RUN useradd -m appuser

WORKDIR /app
RUN mkdir -p /app/public

RUN apt-get update && apt-get install -y \
libx11-xcb1 \
libxcb1 \
libxcomposite1 \
libxcursor1 \
libxdamage1 \
libxext6 \
libxi6 \
libxtst6 \
libnss3 \
libcups2 \
libxss1 \
libxrandr2 \
libasound2 \
libatk1.0-0 \
libgtk-3-0 \
libgbm-dev \
libxshmfence1 \
libdrm2

RUN apt-get install -y chromium

COPY index.html ./
COPY package.json ./
COPY package-lock.json ./
RUN npm install --force
ENV PATH /app/node_modules/.bin:$PATH

COPY tsconfig.json ./tsconfig.json
COPY public ./public
COPY src ./src
COPY next.config.mjs ./next.config.mjs
COPY tailwind.config.ts ./tailwind.config.ts
COPY postcss.config.mjs ./postcss.config.mjs
COPY .eslintrc.json ./.eslintrc.json


ARG NEXT_PUBLIC_SERVER_URL
ENV NEXT_PUBLIC_SERVER_URL $NEXT_PUBLIC_SERVER_URL

ARG NEXTAUTH_URL
ENV NEXTAUTH_URL $NEXTAUTH_URL

ARG AUTH_URL
ENV AUTH_URL $AUTH_URL

ARG ADA_H5P_SECRET
ENV ADA_H5P_SECRET $ADA_H5P_SECRET

ARG NEXT_PUBLIC_WEBAPP_URL
ENV NEXT_PUBLIC_WEBAPP_URL $NEXT_PUBLIC_WEBAPP_URL

ARG DATABASE_URL
ENV DATABASE_URL=$DATABASE_URL

ARG S3_ACCESS_KEY
ENV S3_ACCESS_KEY=$S3_ACCESS_KEY

ARG S3_SECRET_KEY
ENV S3_SECRET_KEY=$S3_SECRET_KEY

ARG S3_ENDPOINT
ENV S3_ENDPOINT=$S3_ENDPOINT

ARG S3_REGION
ENV S3_REGION=$S3_REGION

ARG S3_BUCKET
ENV S3_BUCKET=$S3_BUCKET

ARG NEXTAUTH_SECRET
ENV NEXTAUTH_SECRET=$NEXTAUTH_SECRET

ARG SCW_ACCESS_KEY
ENV SCW_ACCESS_KEY=$SCW_ACCESS_KEY

ARG SCW_SECRET_KEY
ENV SCW_SECRET_KEY=$SCW_SECRET_KEY

ARG SCW_PROJECT_ID
ENV SCW_PROJECT_ID=$SCW_PROJECT_ID

ARG SCW_REGION
ENV SCW_REGION=$SCW_REGION

ARG YOUTUBE_API_KEY
ENV YOUTUBE_API_KEY=$YOUTUBE_API_KEY
ARG GAR_CLIENT_ID
ENV GAR_CLIENT_ID=$GAR_CLIENT_ID
ARG GAR_CLIENT_SECRET
ENV GAR_CLIENT_SECRET=$GAR_CLIENT_SECRET
ARG GAR_ISSUER
ENV GAR_ISSUER=$GAR_ISSUER
ARG GAR_ID_RESSOURCE
ENV GAR_ID_RESSOURCE=$GAR_ID_RESSOURCE
ARG H5P_URL
ENV H5P_URL=$H5P_URL
ARG H5P_PUBLIC_URL
ENV H5P_PUBLIC_URL=$H5P_PUBLIC_URL
ENV NEXT_PUBLIC_H5P_URL=$H5P_PUBLIC_URL
ARG MOODLE_NODE_SERVER_URL
ENV MOODLE_NODE_SERVER_URL=$MOODLE_NODE_SERVER_URL
ARG MOODLE_URL
ENV MOODLE_URL=$MOODLE_URL
ARG MOODLE_TOKEN
ENV MOODLE_TOKEN=$MOODLE_TOKEN
ARG GROQ_API_KEY
ENV GROQ_API_KEY=$GROQ_API_KEY
ARG GOOGLE_GENERATIVE_AI_API_KEY
ENV GOOGLE_GENERATIVE_AI_API_KEY=$GOOGLE_GENERATIVE_AI_API_KEY
ENV NEXT_PUBLIC_H5P_URL=$NEXT_PUBLIC_H5P_URL


ENV NEXT_TELEMETRY_DISABLED 1

# Generate Prisma client
RUN npx prisma generate

RUN npm run build

# Copy and set permissions for entrypoint script
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Change ownership of the app directory to appuser
RUN chown -R appuser:appuser /app

# Switch to non-root user
USER appuser
RUN npx puppeteer browsers install

EXPOSE 3000

ENTRYPOINT ["/entrypoint.sh"]