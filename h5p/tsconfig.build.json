{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": "./",
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./build"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
